version: '2'

networks:
  logistics:

volumes:
  seller.ca.com:

  peer0.seller.com:
  peer1.seller.com:

services:
  seller.ca.com:
    container_name: seller.ca.com 
    extends:
      file: org-abstract.yaml
      service: ca-abstract
    environment:
      - FABRIC_CA_HOME=/etc/hyperledger/fabric-ca-server
      - FABRIC_CA_TLS_ENABLED=true
      - FABRIC_CA_SERVER_CA_NAME=seller-ca-server
      - FABRIC_CA_SERVER_TLS_CERTFILE=/etc/hyperledger/fabric-ca-server-config/ca.seller.com-cert.pem
      - FABRIC_CA_SERVER_TLS_KEYFILE=/etc/hyperledger/fabric-ca-server-config/CA_seller_KEY
    ports:
      - "7054:7054"
    command: sh -c 'fabric-ca-server start --ca.certfile /etc/hyperledger/fabric-ca-server-config/ca.seller.com-cert.pem --ca.keyfile /etc/hyperledger/fabric-ca-server-config/CA_seller_KEY -b admin:adminpw -d'
    volumes:
      - ./crypto-config/peerOrganizations/seller.com/ca/:/etc/hyperledger/fabric-ca-server-config
    networks:
      - logistics

  peer0.seller.com:
    container_name: peer0.seller.com
    extends:
      file: org-abstract.yaml
      service: peer-abstract
    environment:
      - CORE_PEER_ID=peer0.seller.com
      - CORE_PEER_ADDRESS=peer0.seller.com:7051
      - CORE_PEER_LISTENADDRESS=0.0.0.0:7051
      - CORE_PEER_CHAINCODEADDRESS=peer0.seller.com:7052
      - CORE_PEER_CHAINCODELISTENADDRESS=0.0.0.0:7052
#      - CORE_PEER_GOSSIP_BOOTSTRAP=peer1.seller.com:8051
      - CORE_PEER_GOSSIP_EXTERNALENDPOINT=peer0.seller.com:7051
      - CORE_PEER_LOCALMSPID=sellerMSP

    volumes:
        - /var/run/:/host/var/run/
        - ./crypto-config/peerOrganizations/seller.com/peers/peer0.seller.com/msp:/etc/hyperledger/fabric/msp
        - ./crypto-config/peerOrganizations/seller.com/peers/peer0.seller.com/tls:/etc/hyperledger/fabric/tls
        - peer0.seller.com:/var/hyperledger/production
    ports:
      - 7051:7051
      - 7052:7052

    networks:
      - logistics

  peer1.seller.com:
    container_name: peer1.seller.com
    extends:
      file: org-abstract.yaml
      service: peer-abstract
    environment:
      - CORE_PEER_ID=peer1.seller.com
      - CORE_PEER_ADDRESS=peer1.seller.com:8051
      - CORE_PEER_LISTENADDRESS=0.0.0.0:8051
      - CORE_PEER_CHAINCODEADDRESS=peer1.seller.com:8052
      - CORE_PEER_CHAINCODELISTENADDRESS=0.0.0.0:8052
      - CORE_PEER_GOSSIP_EXTERNALENDPOINT=peer1.seller.com:8051
#      - CORE_PEER_GOSSIP_BOOTSTRAP=peer0.seller.com:7051
      - CORE_PEER_LOCALMSPID=sellerMSP
    volumes:
        - /var/run/:/host/var/run/
        - ./crypto-config/peerOrganizations/seller.com/peers/peer1.seller.com/msp:/etc/hyperledger/fabric/msp
        - ./crypto-config/peerOrganizations/seller.com/peers/peer1.seller.com/tls:/etc/hyperledger/fabric/tls
        - peer1.seller.com:/var/hyperledger/production
    ports:
      - 8051:8051
      - 8052:8052
    networks:
      - logistics



    


